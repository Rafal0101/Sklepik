@using Domain.Model
<table class="table" width="100%">
    <thead>
        <tr>
            <th>Użytkownik</th>
            <th>Ilość zamówień</th>
            <th>Wartość zamówień</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in SummaryModel)
        {
        <tr>

            <td>@item.BuyerId</td>
            <td>@item.Qty</td>
            <td>@item.SummaryValueFormatted</td>
            <td align="center"><button class="btn btn-primary btn-sm text-white" @onclick="@(() => OnClickEdit.InvokeAsync(item.BuyerId))">Edytuj</button></td>
        </tr>

        }
    </tbody>
</table>

@code {
    [Parameter]
    public  List<OrderSummaryModel> SummaryModel { get; set; }
    [Parameter] 
    public EventCallback<string> OnClickEdit { get; set; }
}
