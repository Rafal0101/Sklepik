                        <div><label>Wartość:</label><label style="margin-left: 10px;">@MyOrder.SummaryValue</label></div>
                    </h5>*@
                <div class="card-body">
                    <MatTable Items="@Order.AvailableItems"
                              LoadInitialData="true"
                              ShowPaging="false"
                              ShowFooter="false"
                              Striped="true"
                              DebounceMilliseconds="50">
                        <MatTableHeader>
                            <th>Kod</th>
                            <th>Nazwa</th>
                            <th>Ilość</th>
                            <th>Cena</th>
                        </MatTableHeader>
                        <MatTableRow>
                            <td>@context.ItemId</td>
                            <td width="60%">@context.ItemName</td>
                            <td>@context.Quantity</td>
                            <td>@context.PriceGross</td>
                        </MatTableRow>
                    </MatTable>
                </div>
                <div class="card-footer text-muted">@Order.Notification</div>
            </div>
            <br />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public OrderHeaderModel Order { get; set; }
    [Parameter]
    public EventCallback<OrderHeaderModel> OnClickDel { get; set; }
}


