@using Sklepik.Model

<div class="container">
    <div class="row">
        <div class="col-md-12 jobs_index_middle_panels">
            <div class="card bg-light">
                <h5 class="card-header">
                    <table style="text-align: left; width: 100%;"
                           border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                            <tr>
                                <td><small>Zamówienie nr:</small></td>
                                <td><small>@Order.Id</small></td>
                                <td>
                                    <button class="btn btn-danger float-sm-right"
                                            @onclick="@(() => OnClickDel.InvokeAsync(Order))">
                                        Usuń całe zamówienie
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td><small>Status:</small></td>
                                <td><small>@Order.StatusFormatted</small></td>
                            </tr>
                            <tr>
                                <td><small>Data złożenia:</small></td>
                                <td><small>@Order.CreationDateFormatted</small></td>
                            </tr>
                            <tr>
                                <td><small>Wartość:</small></td>
                                <td><small>@Order.SummaryValue</small></td>
                            </tr>
                        </tbody>
                    </table>

                </h5>
                @*<h5 class="card-header">
                        Zamówienie nr: @MyOrder.Id
                        <button class="btn btn-danger float-sm-right"
                                @onclick="@(() => OnClickDel.InvokeAsync(MyOrder))"
